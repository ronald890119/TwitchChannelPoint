{
    "manifest_version": 3,
    "name": "TwitchChannelPoint",
    "version": "1.0.0",
    "description": "An auto channel points clicker extension for Twitch",
    "icons": {
        "16": "images/gift16.png",
        "32": "images/gift32.png",
        "48": "images/gift48.png",
        "128": "images/gift128.png"
    },
    "action": {
        "default_icon": {
            "16": "images/gift16.png",
            "32": "images/gift32.png",
            "48": "images/gift48.png",
            "128": "images/gift128.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["https://www.twitch.tv/*"],
            "js": ["index.js"]
        }
    ],
    "permissions": ["scripting", "activeTab"]
}